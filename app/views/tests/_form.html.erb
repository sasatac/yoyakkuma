<%= form_for @test, :html => { :class => "form-horizontal test" } do |f| %>

    <% if @test.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@test[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :memo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :memo, :class => 'form-control' %>
    </div>
    <%= error_span(@test[:memo]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            tests_path, :class => 'btn btn-default' %>

<% end %>
