<!DOCTYPE html>
<html>
<head>
  <title>Yoyakkuma</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <header class="navbar navbar-fixed-top navbar">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "yoyakkuma", root_path, id: "logo" %>
        <nav>
          <ul class="nav pull-right">
<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
    <span class="glyphicon glyphicons-star"></span>
  </button>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
    <li role="presentation"><%= link_to "店舗", stores_path %></li>
    <% if user_signed_in? %>
      <li role="presentation"><%= link_to "ユーザー", customer_path(current_user.id) %></li>
    <% end %>
    <li role="presentation"><%= link_to "問い合わせ", contact_path %></li>
    <% if user_signed_in? %>
      <li role="presentation"><%= link_to "ログアウト", destroy_user_session_path,
	method: :delete %></li>
    <% end %>
  </ul>
</div>
          </ul>
        </nav>
      </div>
    </div>
    <div id = 'user_nav'>
    <% if user_signed_in? %>
    <% else %>
      <%= link_to "サインアップ", new_user_registration_path,:class=>'btn btn-default' %> or
      <%= link_to "サインイン", new_user_session_path,:class=>'btn btn-default' %>
    <% end %>
    </div>
  </header>
<div class="container">
<%= yield %>
</div>

</body>
<hr>
<footer>
<div class="center">
<p>Copyright 2015 Takazumi Sasaki</p>
</div>
</footer>
</html>
