<h1>Listing reserves</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Store</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserves.each do |reserf| %>
      <tr>
        <td><%= reserf.customer_id %></td>
        <td><%= reserf.store_id %></td>
        <td><%= reserf.start_datetime %></td>
        <td><%= reserf.end_datetime %></td>
        <td><%= reserf.memo %></td>
        <td><%= link_to 'Show', reserf %></td>
        <td><%= link_to 'Edit', edit_reserf_path(reserf) %></td>
        <td><%= link_to 'Destroy', reserf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

